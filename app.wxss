	padding: 20rpx 30rpx;
}

.top {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.title {
	font-size: 40rpx;
	font-weight: bold;
}

.number {
	color: blue;
	font-size: 28rpx;
}

