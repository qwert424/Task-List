/* components/taskList/taskList.wxss */
@import '/font/font.wxss';

.tasklist-container {
	height: 100rpx;
	display: flex;
	margin: 20rpx;
	justify-content: space-between;
	align-items: center;
	padding: 10rpx 30rpx;
	box-sizing: border-box;
	box-shadow: 5rpx 5rpx 15rpx #000;
	gap: 20rpx;
}

.content {
	flex: 1 1 auto;
	max-width:350rpx ;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.btn {
	background-color: brown;
	color: #fff;
	letter-spacing: 8rpx;
}

.delete {
	font-size: 26rpx;
}

.isComplete{
	text-decoration: line-through;
	color: #666;
}